{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "1. usage.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "usage.py",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        // "DASH_DEBUG": "1",
        // "FLASK_ENV": "test"
      },
      "justMyCode": false,
      "serverReadyAction": {
        "pattern": ".*Visit http://(.*)",
        "uriFormat": "http://%s",
        "action": "openExternally"
      }
    },
    {
      "name": "2. Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
    },
    {
      "name": "3. Python: Module",
      "type": "python",
      "request": "launch",
      "module": "${command:extension.commandvariable.file.relativeDirDots}.${fileBasenameNoExtension}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
      "serverReadyAction": {
        "pattern": ".*Visit http://(.*)",
        "uriFormat": "http://%s",
        "action": "openExternally"
      }
    },
    {
      "name": "3. PyTest (all)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-sv"
      ],
      "cwd": "${workspaceRoot}",
      "env": {},
      "console": "internalConsole",
      "justMyCode": false
    },
    {
      "name": "4. PyTest (Current file)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "--headless",
        "-sv",
        "${file}"
      ],
      "cwd": "${workspaceRoot}",
      "env": {},
      "envFile": "${workspaceRoot}/.env",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },
  ]
}